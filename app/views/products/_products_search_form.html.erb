<%= search_form_for @q, :class => collapse_search_form, :id => "products_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :brand_cont, "Brand contains" %>
    <%= f.text_field :brand_cont, :class => "form-control", :placeholder => "Brand contains" %>
  </div>

  <div class="form-group">
    <%= f.label :validated_by_company_eq, "Validated by company" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :validated_by_company_eq, "1", checked: ((params[:q] && params[:q][:validated_by_company_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :validated_by_company_eq, "0", checked: ((params[:q] && params[:q][:validated_by_company_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :validated_by_company_eq, ""%> Either
      </label>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :purchase_link_cont, "Purchase link contains" %>
    <%= f.text_field :purchase_link_cont, :class => "form-control", :placeholder => "Purchase link contains" %>
  </div>

  <div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

  <div class="form-group">
    <%= f.label :ph_level, "Ph level" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :ph_level_gteq, :class => "form-control", :placeholder => "Ph level greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :ph_level_lteq, :class => "form-control", :placeholder => "Ph level less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :product_name_cont, "Product name contains" %>
    <%= f.text_field :product_name_cont, :class => "form-control", :placeholder => "Product name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :creator_username_cont, "Creator username contains" %>
    <%= f.text_field :creator_username_cont, :class => "form-control", :placeholder => "Creator username contains" %>
  </div>

  <div class="form-group">
    <%= f.label :product_type_category_type_cont, "Product type category_type contains" %>
    <%= f.text_field :product_type_category_type_cont, :class => "form-control", :placeholder => "Product type category_type contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/products" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#products_filters">
  Show filters
</a>
