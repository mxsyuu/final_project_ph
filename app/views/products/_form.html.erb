<% was_validated = product.errors.any? %>

<%= form_with(model: product, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% brand_class = "form-control" %>
    <% brand_was_invalid = product.errors.include?(:brand) %>

    <% if was_validated %>
      <% if brand_was_invalid %>
        <% brand_class << " is-invalid" %>
      <% else %>
        <% brand_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :brand %>
    <%= f.text_field :brand, class: brand_class, placeholder: "Enter brand" %>
    <% if brand_was_invalid %>
      <% product.errors.full_messages_for(:brand).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% product_name_class = "form-control" %>
    <% product_name_was_invalid = product.errors.include?(:product_name) %>

    <% if was_validated %>
      <% if product_name_was_invalid %>
        <% product_name_class << " is-invalid" %>
      <% else %>
        <% product_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :product_name %>
    <%= f.text_field :product_name, class: product_name_class, placeholder: "Enter product name" %>
    <% if product_name_was_invalid %>
      <% product.errors.full_messages_for(:product_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% ph_level_class = "form-control" %>
    <% ph_level_was_invalid = product.errors.include?(:ph_level) %>

    <% if was_validated %>
      <% if ph_level_was_invalid %>
        <% ph_level_class << " is-invalid" %>
      <% else %>
        <% ph_level_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :ph_level %>
    <%= f.text_field :ph_level, class: ph_level_class, placeholder: "Enter ph level" %>
    <% if ph_level_was_invalid %>
      <% product.errors.full_messages_for(:ph_level).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% description_class = "form-control" %>
    <% description_was_invalid = product.errors.include?(:description) %>

    <% if was_validated %>
      <% if description_was_invalid %>
        <% description_class << " is-invalid" %>
      <% else %>
        <% description_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :description %>
    <%= f.text_area :description, class: description_class, placeholder: "Enter description" %>
    <% if description_was_invalid %>
      <% product.errors.full_messages_for(:description).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% purchase_link_class = "form-control" %>
    <% purchase_link_was_invalid = product.errors.include?(:purchase_link) %>

    <% if was_validated %>
      <% if purchase_link_was_invalid %>
        <% purchase_link_class << " is-invalid" %>
      <% else %>
        <% purchase_link_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :purchase_link %>
    <%= f.text_field :purchase_link, class: purchase_link_class, placeholder: "Enter purchase link" %>
    <% if purchase_link_was_invalid %>
      <% product.errors.full_messages_for(:purchase_link).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% image_class = "form-control" %>
    <% image_was_invalid = product.errors.include?(:image) %>

    <% if was_validated %>
      <% if image_was_invalid %>
        <% image_class << " is-invalid" %>
      <% else %>
        <% image_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
    <% if image_was_invalid %>
      <% product.errors.full_messages_for(:image).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% creator_class = "form-control" %>
    <% creator_was_invalid = product.errors.include?(:creator) %>

    <% if was_validated %>
      <% if creator_was_invalid %>
        <% creator_class << " is-invalid" %>
      <% else %>
        <% creator_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :creator_id %>
    <%= f.collection_select :creator_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <% if creator_was_invalid %>
      <% product.errors.full_messages_for(:creator).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% product_type_class = "form-control" %>
    <% product_type_was_invalid = product.errors.include?(:product_type) %>

    <% if was_validated %>
      <% if product_type_was_invalid %>
        <% product_type_class << " is-invalid" %>
      <% else %>
        <% product_type_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :product_type_id %>
    <%= f.collection_select :product_type_id, Category.all, :id, :to_s, {}, class: "form-control" %>
    <% if product_type_was_invalid %>
      <% product.errors.full_messages_for(:product_type).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-check">
    <% validated_by_company_class = "form-check-input" %>
    <% validated_by_company_was_invalid = product.errors.include?(:validated_by_company) %>

    <% if was_validated %>
      <% if validated_by_company_was_invalid %>
        <% validated_by_company_class << " is-invalid" %>
      <% else %>
        <% validated_by_company_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :validated_by_company, class: "form-check-label" do %>
      <%= f.check_box :validated_by_company, class: validated_by_company_class %> Validated by company
    <% end %>
    <% if validated_by_company_was_invalid %>
      <% product.errors.full_messages_for(:validated_by_company).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
