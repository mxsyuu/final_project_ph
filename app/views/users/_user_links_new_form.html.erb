<!-- Form product start -->
<%= form_with(model: @product, local: true) do |f| %>
<!-- Form product end -->

  <!-- Label and input for brand start -->
  <div class="form-group">
    <%= f.label :brand %>

    <!-- Input for brand start -->
    <%= f.text_field :brand, class: "form-control" %>
    <!-- Input for brand end -->
  </div>
  <!-- Label and input for brand end -->

  <!-- Label and input for product_name start -->
  <div class="form-group">
    <%= f.label :product_name %>

    <!-- Input for product_name start -->
    <%= f.text_field :product_name, class: "form-control" %>
    <!-- Input for product_name end -->
  </div>
  <!-- Label and input for product_name end -->

  <!-- Label and input for ph_level start -->
  <div class="form-group">
    <%= f.label :ph_level %>

    <!-- Input for ph_level start -->
    <%= f.text_field :ph_level, class: "form-control" %>
    <!-- Input for ph_level end -->
  </div>
  <!-- Label and input for ph_level end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <%= f.label :description %>
    <!-- Input for description start -->
    <%= f.text_area :description, rows: "3", class: "form-control" %>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for purchase_link start -->
  <div class="form-group">
    <%= f.label :purchase_link %>

    <!-- Input for purchase_link start -->
    <%= f.text_field :purchase_link, class: "form-control" %>
    <!-- Input for purchase_link end -->
  </div>
  <!-- Label and input for purchase_link end -->

  <!-- Label and input for image start -->
  <div class="form-group">
    <%= f.label :image %>

    <!-- Input for image start -->
    <%= f.file_field :image, class: "form-control" %>
    <!-- Input for image end -->
  </div>
  <!-- Label and input for image end -->

  <!-- Label and input for creator_id start -->
  <!-- Input for creator_id start -->
  <%= f.hidden_field :creator_id, value: @user.id %>
  <!-- Input for creator_id end -->
  <!-- Label and input for creator_id end -->

  <!-- Label and input for product_type_id start -->
  <div class="form-group">
    <%= f.label :product_type_id %>

    <!-- Input for product_type_id start -->
    <%= f.collection_select :product_type_id, Category.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for product_type_id end -->
  </div>
  <!-- Label and input for product_type_id end -->

  <!-- Label and input for validated_by_company start -->
  <div class="form-check">
    <!-- Input for validated_by_company start -->
    <%= f.check_box :validated_by_company, class: "form-check-input" %>
    <!-- Input for validated_by_company end -->
    <%= f.label :validated_by_company, class: "form-check-label" %>
  </div>
  <!-- Label and input for validated_by_company end -->

  <%= f.submit "Create product", class: "btn btn-block btn-outline-secondary" %>
<% end %>
