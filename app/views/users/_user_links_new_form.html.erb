<%= form_with(model: @product, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :brand %>

    <%= f.text_field :brand, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :product_name %>

    <%= f.text_field :product_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :ph_level %>

    <%= f.text_field :ph_level, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: "3", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :purchase_link %>

    <%= f.text_field :purchase_link, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image %>

    <%= f.file_field :image, class: "form-control" %>
  </div>

  <%= f.hidden_field :creator_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :product_type_id %>

    <%= f.collection_select :product_type_id, Category.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-check">
    <%= f.check_box :validated_by_company, class: "form-check-input" %>
    <%= f.label :validated_by_company, class: "form-check-label" %>
  </div>

  <%= f.submit "Create product", class: "btn btn-block btn-outline-secondary" %>
<% end %>
