<% was_validated = category.errors.any? %>

<%= form_with(model: category, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for category_type start -->
  <div class="form-group">
    <% category_type_class = "form-control" %>
    <% category_type_was_invalid = category.errors.include?(:category_type) %>

    <% if was_validated %>
      <% if category_type_was_invalid %>
        <% category_type_class << " is-invalid" %>
      <% else %>
        <% category_type_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :category_type %>
    <!-- Input for category_type start -->
    <%= f.text_field :category_type, class: category_type_class, placeholder: "Enter category type" %>
    <!-- Input for category_type end -->
    <% if category_type_was_invalid %>
      <% category.errors.full_messages_for(:category_type).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for category_type end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
