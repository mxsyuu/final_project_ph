<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Products

    <a data-toggle="collapse" href="#category_products_new_form">
      Add product
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @category.products.each do |product| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to product, product %>

        <%= link_to product, method: :delete, data: { confirm: "Do you really want to delete this product" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="category_products_new_form">
        <%= render partial: "categories/category_products_new_form" %>
      </div>
    </div>

  </ul>
</div>
